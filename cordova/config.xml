<?xml version='1.0' encoding='utf-8'?>
<widget id="devnull.Pelo"
        version="1.0.0" android-versionCode="1" ios-CFBundleVersion="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pelo</name>
    <description>
        The Pelo Rider Application
    </description>
    <author email="warren@devnull.com.au" href="www.devnull.com.au">
        Warren Crossing
    </author>

    <content src="index.html"/>

    <plugin name="cordova-plugin-whitelist" version="1"/>
    <plugin name="cordova-plugin-geolocation"/>

    <allow-navigation href="*"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>


    <preference name="Fullscreen" value="true"/>
    <preference name="Orientation" value="default"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="BackupWebStorage" value="none"/>

    <preference name="SplashScreenDelay" value="3000"/>
    <preference name="SplashMaintainAspectRatio" value="true"/>
    <preference name="SplashShowOnlyFirstTime" value="true"/>
    <preference name="SplashScreen" value="/images/browser/splashscreen.jpg"/> <!-- defaults to "/img/logo.png" -->
    <preference name="SplashScreenDelay" value="3000"/> <!-- defaults to "3000" -->
    <preference name="SplashScreenBackgroundColor" value="green"/> <!-- defaults to "#464646" -->
    <preference name="ShowSplashScreen" value="true"/> <!-- defaults to "true" -->
    <preference name="cdvBuildArch" value="x86"/>
    <preference name="cdvBuildMultipleApks" value="false"/>
    <preference name="android-minSdkVersion" value="16"/>
    <preference name="SplashScreenWidth" value="600"/>
    <!-- defaults to "170" -->
    <preference name="SplashScreenHeight" value="300"/>
    <!-- defaults to "200" -->

    <!-- http://cordova.apache.org/docs/en/4.0.0/config_ref_images.md.html -->
    <!--
    <hook type="before_build" src="scripts/gulp_default.js" />
    -->
    <platform name="android">
        <allow-intent href="market:*"/>
