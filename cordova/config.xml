<?xml version='1.0' encoding='utf-8'?>
<widget id="cc.pelo.App"
        version="1.0.0" android-versionCode="1" ios-CFBundleVersion="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>Pelo</name>
    <description>
        The Pelo Rider Application
    </description>
    <author email="warren@devnull.com.au" href="www.devnull.com.au">
        Warren Crossing
    </author>

    <content src="index.html"/>

    <plugin name="cordova-plugin-compat" spec="^1.1.0"/>
    <plugin name="cordova-plugin-device"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <plugin name="cordova-plugin-splashscreen"/>
    <plugin name="cordova-plugin-geolocation"/>
    <plugin name="cordova-plugin-network-information"/>
    <plugin name="cordova-plugin-crosswalk-webview" spec="^2.3.0"/>
    <plugin name="cordova-plugin-mapbox" spec="^1.2.3">
        <variable name="ACCESS_TOKEN"
                  value="pk.eyJ1Ijoid2FycmVuYzUiLCJhIjoiY2lqNWJyZGdwMDA1b3VkbHZxbHdtcWh6bCJ9.q_fttPToEFTe6tnFFC2K8g"/>
    </plugin>
    <plugin name="cordova-plugin-facebook4">

        <variable name="APP_ID" value="1697342230545684"/>
        <!--
        <variable name="APP_ID" value="269193253518235"/>
            -->
        <variable name="APP_NAME" value="Pelo"/>
    </plugin>

    <plugin name="permissions-dummy" spec="./local/permissions"/>

    <allow-navigation href="*"/>

    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>

    <preference name="Fullscreen" value="true"/>
    <preference name="Orientation" value="default"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="BackupWebStorage" value="none"/>

    <preference name="SplashScreenDelay" value="3000"/>
    <preference name="SplashMaintainAspectRatio" value="true"/>
    <preference name="SplashShowOnlyFirstTime" value="true"/>
    <!--
    <preference name="SplashScreen" value="/img/splash1.jpg"/>
    -->
    <preference name="SplashScreenBackgroundColor" value="green"/>
    <preference name="ShowSplashScreen" value="true"/>
    <preference name="SplashScreenWidth" value="600"/>
    <preference name="SplashScreenHeight" value="300"/>

    <!--
        <preference name="cdvBuildArch" value="x86"/>
        <preference name="cdvBuildMultipleApks" value="false"/>
    -->
    <preference name="xwalkVersion" value="19"/>
    <preference name="xwalkMultipleApk" value="true"/>
    <preference name="android-minSdkVersion" value="15"/>
    <preference name="tools:overrideLibrary" value="org.xwalk.core"/>
    <preference name="uses-sdk:minSdkVersion" value="15"/>
    <preference name="android-targetSdkVersion" value="21"/>
    <!--
    <preference name="tools:overrideLibrary" value="org.xwalk.core"/>
    -->
    <!-- http://cordova.apache.org/docs/en/4.0.0/config_ref_images.md.html -->
    <!--
    <hook type="before_run" src="scripts/gulp-compile.js" />
    -->


    <platform name="android">
        <hook type="before_run" src="scripts/adb-reverse.js" />

        <allow-intent href="market:*"/>
        <!--
        <hook type="before_build" src="scripts/appBeforeBuild.js"/>
        <hook type="before_plugin_install" src="scripts/appBeforePluginInstall.js"/>

        <hook type="before_build" src="scripts/wp8/appAndroidBeforeBuild.js"/>
        <hook type="before_plugin_install" src="scripts/wp8/appWP8BeforePluginInstall.js"/>
    -->
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>

</widget>






